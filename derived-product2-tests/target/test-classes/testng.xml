<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="NBA Bulls Derived Product 2 Tests" parallel="methods" thread-count="2">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="browser.version" value="latest"/>
    <parameter name="remote.execution" value="false"/>
    
    <test name="Bulls Footer Tests">
        <classes>
            <class name="com.nba.tests.bulls.BullsTestRunner"/>
        </classes>
    </test>
    
    <test name="Bulls Footer Link Tests">
        <groups>
            <run>
                <include name="Footer"/>
            </run>
        </groups>
        <classes>
            <class name="com.nba.tests.bulls.BullsTestRunner"/>
        </classes>
    </test>
    
    <test name="Bulls Link Validation Tests">
        <groups>
            <run>
                <include name="Links"/>
            </run>
        </groups>
        <classes>
            <class name="com.nba.tests.bulls.BullsTestRunner"/>
        </classes>
    </test>
    
</suite>
