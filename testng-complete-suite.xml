<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="NBA Automation Framework - Complete Test Suite" parallel="tests" thread-count="3">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="browser.version" value="latest"/>
    <parameter name="remote.execution" value="false"/>
    <parameter name="screenshot.path" value="./test-output/screenshots/"/>
    <parameter name="report.path" value="./test-output/reports/"/>
    
    <!-- Core Product Tests (Warriors) -->
    <test name="NBA Warriors Core Product Tests">
        <packages>
            <package name="com.nba.tests.core"/>
        </packages>
    </test>
    
    <!-- Derived Product 1 Tests (Sixers) -->
    <test name="NBA Sixers Derived Product 1 Tests">
        <packages>
            <package name="com.nba.tests.sixers"/>
        </packages>
    </test>
    
    <!-- Derived Product 2 Tests (Bulls) -->
    <test name="NBA Bulls Derived Product 2 Tests">
        <packages>
            <package name="com.nba.tests.bulls"/>
        </packages>
    </test>
    
    <!-- All Tests Combined -->
    <test name="All NBA Tests">
        <packages>
            <package name="com.nba.tests.core"/>
            <package name="com.nba.tests.sixers"/>
            <package name="com.nba.tests.bulls"/>
        </packages>
    </test>
    
</suite>
